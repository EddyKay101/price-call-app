// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json", /* Recommended React Native TSConfig base */
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/components/"
      ],
      "@/screens/*": [
        "src/screens/"
      ],
      "@/models/*": [
        "src/models/"
      ],
      "@/api/*": [
        "src/api/"
      ],
      "@/images/*": [
        "src/images/"
      ]
    },
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "types": [
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "metro.config.js",
    "jest.config.js"
  ]
}